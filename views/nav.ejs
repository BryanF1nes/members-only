<header class="bg-gray-900">
    <nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8" aria-label="Global">
        <div class="flex lg:flex-1">
            <a href="/" class="-m-1.5 p-1.5">
                <span class="sr-only">Members Only</span>
                <h1 class="text-4xl font-semibold text-white">MC <span class="text-sm font-thin max-sm:hidden">Send Messages & Connect</span></h1>
            </a>
        </div>
        <div class="flex lg:hidden">
            <button id="open-menu" type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-400">
                <span class="sr-only">Open main menu</span>
                <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                </svg>
            </button>
        </div>
        <div class="hidden lg:flex lg:gap-x-12">
        </div>
        <% if (locals.user) { %>
            <div class="hidden lg:flex lg:flex-1 lg:justify-end gap-1 relative group">
                <p class="text-md/6 font-semibold text-white cursor-pointer">
                    <span class="text-md/6 font-thin">Hi,</span> <%= user.username %>
                </p>
                <div class="absolute hidden group-hover:block bg-gray-900 text-white text-sm rounded-lg shadow-lg mt-6 w-40">
                    <a href="/members/messages/<%= locals.user.id %>" class="block px-4 py-2 hover:bg-gray-800">Your Messages</a>
                    <a href="/members" class="block px-4 py-2 hover:bg-gray-800">Members</a>
                    <a href="/secrets" class="block px-4 py-2 hover:bg-gray-800">Secrets</a>
                    <a href="/log-out" class="block px-4 py-2 rounded-b-lg hover:bg-gray-800">Log out</a>
                </div>
            </div>
        <% } else { %>
            <div class="hidden lg:flex lg:flex-1 lg:justify-end">
                <a href="/sign-in" class="text-md/6 font-semibold text-white">Log in</a>
            </div>
        <% } %>
    </nav>

    <!-- Mobile menu, show/hide based on menu open state. -->
    <div id="nav-menu" class="lg:hidden hidden" role="dialog" aria-modal="true">
        <!-- Background backdrop, show/hide based on slide-over state. -->
        <div class="fixed inset-0 z-10"></div>
        <div class="fixed inset-y-0 right-0 z-10 w-3/4 overflow-y-auto bg-gray-900 px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-white/10">
            <div class="flex items-center justify-between">
                <a href="/" class="-m-1.5 p-1.5">
                    <span class="sr-only">Members Only</span>
                    <h1 class="text-4xl font-semibold text-white">MC <span class="text-sm font-thin max-sm:hidden">Send Messages & Connect</span></h1>
                </a>
                <button id="close-menu" type="button" class="-m-2.5 rounded-md p-2.5 text-gray-400">
                    <span class="sr-only">Close menu</span>
                    <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            <div class="mt-6 flow-root">
                <% if (locals.user) { %>
                <div class="-my-6 divide-y divide-gray-500/25">
                    <div class="space-y-2 py-6">
                        <p class="text-md/6 font-normal text-white">Welcome, <span class="text-md/6 font-semibold text-white"><%= user.username %></span></p>
                    </div>
                    <div class="py-6">
                        <a href="/members/messages/<%= locals.user.id %>" class="-mx-3 block rounded-lg px-3 py-2.5 text-base/7 font-semibold text-white hover:bg-gray-800">Your Messages</a>
                        <a href="/members" class="-mx-3 block rounded-lg px-3 py-2.5 text-base/7 font-semibold text-white hover:bg-gray-800">Members</a>
                        <a href="/secrets" class="-mx-3 block rounded-lg px-3 py-2.5 text-base/7 font-semibold text-white hover:bg-gray-800">Secrets</a>
                        <a href="/log-out" class="-mx-3 block rounded-lg px-3 py-2.5 text-base/7 font-semibold text-white hover:bg-gray-800">Log out</a>
                    </div>
                </div>
                <% } else { %>
                <div class="-my-6 divide-y divide-gray-500/25">
                    <div class="space-y-2 py-6"></div>
                    <div class="py-6">
                        <a href="/sign-in" class="-mx-3 block rounded-lg px-3 py-2.5 text-base/7 font-semibold text-white hover:bg-gray-800">Log in</a>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</header>
<script src="/js/nav.js"></script>